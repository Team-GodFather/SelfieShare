<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:orientation="vertical"
    tools:context="com.godfather.selfieshare.activities.HomeActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:shrinkColumns="*"
        android:stretchColumns="*" android:gravity="center_vertical">

        <TableRow android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:gravity="center_horizontal" android:id="@+id/TableRow">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_span="6"
                      android:padding="18dip" android:text="Hello and Welcome to SelfieShare"
                      android:textColor="@android:color/background_dark" android:textSize="28sp"
                      android:textStyle="bold" android:gravity="center_horizontal"/>
        </TableRow>
        <TableRow android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:gravity="center_horizontal" android:id="@+id/TableRow">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_span="6" android:padding="18dip"
                      android:textSize="28sp"
                      android:gravity="center_horizontal"/>
        </TableRow>
        <TableRow android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:gravity="center_horizontal" android:id="@+id/TableRow">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_span="6"
                      android:padding="18dip" android:text="Your current shares:"
                      android:textColor="@android:color/black" android:textSize="21sp"
                      android:gravity="center_horizontal"/>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:padding="18dip"
                android:text="Requested Selfies:"
                android:textColor="@android:color/black"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/requestedSelfies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:padding="18dip"
                android:textColor="@android:color/white"
                android:textSize="20sp" android:layout_column="4" android:textStyle="bold"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:padding="18dip"
                android:text="Received Selfies:"
                android:textColor="@android:color/black"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/receivedSelfies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:padding="18dip"
                android:textColor="@android:color/white"
                android:textSize="20sp" android:layout_column="4" android:textStyle="bold"/>
        </TableRow>
    </TableLayout>
</LinearLayout>